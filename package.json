{
    "name": "spectre",
    "description": "A spectre is haunting Europe. This is its website's theme.",
    "demo": "https://spectre.hutt.io/",
    "version": "2.6.1",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "dev build": "gulp build",
        "zip": "gulp zip",
        "critical": "gulp critical",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Jannis Hutt",
        "email": "themes@hutt.io",
        "url": "https://hutt.io"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/hutt/spectre.git"
    },
    "bugs": "https://github.com/hutt/spectre/issues",
    "contributors": [
        {
            "name": "hutt",
            "email": "themes@hutt.io",
            "url": "https://hutt.io"
        }
    ],
    "devDependencies": {
        "autoprefixer": "10.4.7",
        "beeper": "2.1.0",
        "cssnano": "5.1.12",
        "gscan": "4.39.4",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "inquirer": "8.2.4",
        "penthouse": "^2.3.3",
        "postcss": "8.2.15",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0",
        "text-to-svg": "^3.1.5"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 16,
        "image_sizes": {
            "xs": {
                "width": 160
            },
            "s": {
                "width": 320
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": {
            "exclude": [
                "audio",
                "nft",
                "product",
                "video"
            ]
        },
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo in the middle",
                    "Logo on the left"
                ],
                "default": "Logo on the left"
            },
            "header_and_footer_color": {
                "type": "select",
                "options": [
                    "Background color",
                    "Accent color"
                ],
                "default": "Background color"
            },
            "show_newsletter_signup_form": {
                "type": "boolean",
                "default": true,
                "description": "Shows a newsletter signup form on the bottom of every page (if activated)."
            },
            "signup_heading": {
                "type": "text",
                "description": "Used in your footer across your theme, defaults to site title when empty"
            },
            "signup_subheading": {
                "type": "text",
                "description": "Defaults to site description when empty"
            },
            "header_style": {
                "type": "select",
                "options": [
                    "Landing",
                    "Highlight",
                    "Magazine",
                    "Search",
                    "Off"
                ],
                "description": "Landing is recommended for all sites, Highlight & Magazine for those with more content",
                "default": "Highlight",
                "group": "homepage"
            },
            "header_text": {
                "type": "text",
                "group": "homepage",
                "description": "Defaults to site description when empty",
                "visibility": "header_style:[Landing, Search]"
            },
            "background_image": {
                "type": "boolean",
                "default": true,
                "description": "Use the publication cover set on the Brand tab as your background",
                "group": "homepage",
                "visibility": "header_style:[Landing, Search]"
            },
            "show_featured_posts": {
                "type": "boolean",
                "default": false,
                "group": "homepage",
                "visibility": "header_style:[Highlight, Magazine]"
            },
            "post_feed_style": {
                "type": "select",
                "options": [
                    "List",
                    "Grid"
                ],
                "default": "List",
                "group": "homepage"
            },
            "x": {
                "type": "text",
                "default": ""
            },
            "mastodon": {
                "type": "text",
                "default": ""
            },
            "instagram": {
                "type": "text",
                "default": ""
            },
            "tiktok": {
                "type": "text",
                "default": ""
            },
            "youtube": {
                "type": "text",
                "default": ""
            },
            "facebook": {
                "type": "text",
                "default": ""
            },
            "podcast": {
                "type": "text",
                "default": ""
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    }
}
